noremap h H
noremap s L
noremap t j
noremap n k

noremap T 10j
noremap N 10k

noremap <C-o> O
noremap O :tabopen 
map <C-S-o> :winopen 
map <C-d> :tabdetach

noremap . gT
noremap p gt

noremap > :tabmove! -1<CR>
noremap P :tabmove! +1<CR>

noremap l n
noremap L N

set defsearch="ddg"

"set! browser.tabs.autoHide=true
set titlestring="Firefox"
"set hintchars="aoeuidhtns"
"set guioptions="rb"

set mapleader=,
set hlfind
set incfind

noremap e :javascript window.TabView.toggle()<CR>

javascript <<EOF
(function(){

    // Keep the status bar the same height even if large icons have been added to it
    //document.getElementById("addon-bar").style.maxHeight = "16px";

    dactyl.modules.commands.addUserCommand(["chrome"], "Open current URL in Chrome", function (args) {
        dactyl.execute("!google-chrome '" + dactyl.modules.buffer.URL + "' &", null, true);
    });

    dactyl.modules.commands.addUserCommand(["translate"], "Translate the current page", function (args) {
        dactyl.open("http://translate.google.com/translate?u=" + escape(dactyl.modules.buffer.URL));
    });

})();
EOF
