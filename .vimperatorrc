    liberator.modules.commands.addUserCommand(["share"], 'Share current URL to Twitter', function (args) {
        var description = (args.length > 0) ? args.join(" ") : "\""+ liberator.modules.buffer.title + "\"";
        var url = util.httpGet("http://tinyurl.com/api-create.php?url=" + liberator.modules.buffer.URL).responseText;
        liberator.execute(":twitter " + description + " " + url);
    });

    liberator.modules.commands.addUserCommand(["chrome"], "Open current URL in Chrome", function (args) {
        liberator.execute("!google-chrome '" + liberator.modules.buffer.URL + "' &", null, true);
    });

